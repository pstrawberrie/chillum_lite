.modal(data-modal="newscreen")
  a.close-modal(href="##")
    span.typcn.typcn-times
  form.modal-content(action="/newscreen", name="newscreen", method="POST")
    .item
      label(for="screenName") Screen Name?
      input(name="screenName", type="text", placeholder=`screen ${chillum.totalScreens + 1}`)
    .item.pt-1 Widgets?
    .item.checks
      each widget in widgets
        .check
          input(type="checkbox", name=widget.name)
          label(for=widget.name)= widget.name
    .item
      input(type="submit", value="Create Screen")
    
